<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".option"
    android:background="@drawable/bglast">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#0B3861">
            <Button
                android:id="@+id/back1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="Back"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/round"/>
          <TextView
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="How To Play"
              android:textSize="30dp"
              android:textStyle="bold"
              android:textColor="#fff"
              android:layout_marginLeft="40dp"/>

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/black_overlay"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/players"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/backgroundcolor"
                    android:layout_marginTop="10dp"
                    android:text="How To Play"/>
                <ImageView
                    android:id="@+id/more"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/cercleyellow"
                    android:src="@drawable/more"
                    android:padding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yello"
                    android:layout_margin="10dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tx0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="You can play this Game against your friend or against android"
            android:textColor="@color/backgroundcolor"
            android:textSize="30dp"
            android:visibility="invisible"/>
        <TextView
        android:id="@+id/tx1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="both players must give a four different number"
        android:textColor="@color/backgroundcolor"
        android:textSize="30dp"
        android:visibility="invisible"/>
        <TextView
            android:visibility="invisible"
            android:textColor="@color/backgroundcolor"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/tx2"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the principle of this game is to guess the series of your adversary before him"/>
        <TextView
            android:visibility="invisible"
            android:textColor="@color/backgroundcolor"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/tx3"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="when you try to find your adversary's number"/>
        <TextView
            android:visibility="invisible"
            android:textColor="@color/backgroundcolor"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/tx4"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the letter T means : correct number in correct place"/>

        <TextView
            android:visibility="invisible"
            android:textColor="@color/backgroundcolor"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/tx5"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the letter V means : correct number in wrong place"/>
        <TextView
            android:visibility="invisible"
            android:textColor="@color/backgroundcolor"
            android:gravity="center"
            android:id="@+id/tx6"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When you play ageanst Android the numbers in the top of page help you to delete wrong numbers"/>
        <TextView
            android:visibility="invisible"
            android:textColor="@color/backgroundcolor"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/tx7"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When you play ageanst your friend, the winner punish the loser by doing something helpfull"/>

    </LinearLayout>
</ScrollView>